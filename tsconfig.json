{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-native",
    "esModuleInterop": true,
    "baseUrl": ".",
    "typeRoots": ["./types", "./node_modules/@types"],
    "types": ["react", "react-native", "expo-router"],
    "paths": {
      "@/*": ["./*"],
      "@app/*": ["./app/*"],
      "@lib/*": ["./lib/*"],
      "@types/*": ["./types/*"],
      "@components/*": ["./app/components/*"],
      "@screens/*": ["./app/screens/*"],
      "@hooks/*": ["./app/hooks/*"],
      "@utils/*": ["./app/utils/*"],
      "@assets/*": ["./app/assets/*"]
    }
  },
  "include": [
    "app",
    "lib",
    "types",
    "expo-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts"
  ]
}
